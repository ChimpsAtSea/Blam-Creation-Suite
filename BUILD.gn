
executable("bcs_executable") {
  inputs = [ "BUILD.gn" ]
  sources = [ 
    "bcs/bcs_executable.cpp",
    "bcs/bcs.h"
  ]

  deps = [
    ":bcs_shared",
    ":bcs_static",
  ]
}

target(bcs_library_type, "bcs_shared")
{
  sources = [
    "bcs/bcs_shared.cpp",
    "bcs/bcs.h"
  ]
}

static_library("bcs_static")
{
  sources = [
    "bcs/bcs_static.cpp",
    "bcs/bcs.h"
  ]
}




