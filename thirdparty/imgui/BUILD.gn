import("//toolchain/bcs_projects.gni")

bcs_library("imgui")
{
  metadata = { project_folder = [ "//ThirdParty" ] }
  defines = [ "IMGUI_USER_CONFIG=\"imgui_user_config.h\"", "IMGUI_DLL_EXPORT" ]
  include_dirs = [ "imgui" ]
  sources = [
    "imgui_user_config.h",
    "imgui/backends/imgui_impl_dx12.h",
    "imgui/backends/imgui_impl_win32.h",
    "imgui/imgui.h",
    "imgui/imgui_internal.h",
    "imgui/imstb_rectpack.h",
    "imgui/imstb_textedit.h",
    "imgui/imstb_truetype.h",
    "imgui/backends/imgui_impl_dx12.cpp",
    "imgui/backends/imgui_impl_win32.cpp",
    "imgui/imgui.cpp",
    "imgui/imgui_demo.cpp",
    "imgui/imgui_draw.cpp",
    "imgui/imgui_tables.cpp",
    "imgui/imgui_widgets.cpp",
  ]
  libs = []

  if(is_target_windows)
  {
    libs += [
      "dxguid.lib",
      "dxgi.lib",
      "d3d12.lib",
    ]
  }
  
  deps = [
    "//framework/platform:platform",
    "//framework/templatelibrary:templatelibrary",
  ]
}
